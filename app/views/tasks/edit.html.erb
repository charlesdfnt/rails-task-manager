<div class="max-w-xl mx-auto py-10 px-4">
  <div class="bg-white p-6 rounded shadow border">
    <h3 class="text-2xl font-semibold text-yellow-600 mb-6">✏️ Edit Task</h3>

    <%= form_with model: @task do |f| %>
      <div class="mb-4">
        <%= f.label :title, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 border rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :details, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.text_field :details, class: "w-full px-3 py-2 border rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-400" %>
      </div>

      <div class="mb-6 flex items-center">
        <%= f.check_box :completed, class: "h-4 w-4 text-indigo-600 rounded mr-2" %>
        <%= f.label :completed, class: "text-gray-700" %>
      </div>

      <div class="flex space-x-3">
        <%= f.submit "Update Task", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded" %>
        <%= link_to "← Cancel", task_path(@task), class: "text-gray-600 hover:underline self-center" %>
      </div>
    <% end %>
  </div>
</div>
