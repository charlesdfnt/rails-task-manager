<div class="max-w-2xl mx-auto py-10 px-4">
  <div class="bg-white p-6 rounded shadow border">
    <h1 class="text-2xl font-bold text-indigo-600 mb-2"><%= @task.title %></h1>
    <p class="text-gray-700 text-lg mb-4"><%= @task.details %></p>
    <p class="text-sm text-gray-500 mb-6"><%= @task.completed ? "✅ Completed" : "⏳ In Progress" %></p>

    <div class="flex space-x-4">
      <%= link_to "← Back", tasks_path, class: "text-gray-600 hover:underline" %>
      <%= link_to "✏️ Edit", edit_task_path(@task), class: "text-yellow-500 hover:underline" %>
    </div>
  </div>
</div>
